<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_controller"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#33f4caca"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/controller_home"
            style="@style/ControllerStyle"
            android:checked="true"
            android:drawableTop="@drawable/controller_recommend_bg"
            android:text="@string/str_home"/>

        <RadioButton
            android:id="@+id/controller_category"
            style="@style/ControllerStyle"
            android:drawableTop="@drawable/controller_program_bg"
            android:text="@string/str_category"/>

        <RadioButton
            android:id="@+id/controller_live"
            style="@style/ControllerStyle"
            android:drawableTop="@drawable/controller_live_bg"
            android:text="@string/str_live"/>

        <RadioButton
            android:id="@+id/controller_mine"
            style="@style/ControllerStyle"
            android:drawableTop="@drawable/controller_mine_bg"
            android:text="@string/str_mine"/>

    </RadioGroup>
</LinearLayout>
